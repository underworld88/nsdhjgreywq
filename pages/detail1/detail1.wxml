<view class="show-item">
  <view class="title">标题</view>
  <view class="content">
    <text>{{item.title}}</text>
  </view>
</view>

<view class="show-item">
  <view class="title">内容</view>
  <view class="content">
    <text>{{item.content}}</text>
  </view>
</view>

<view class="show-item">
  <view class="title">事项类型</view>
  <view class="content">
    <view wx:if="{{item.level == 1}}" >工作</view>
    <view wx:elif="{{item.level == 2}}">学习</view>
    <view wx:elif="{{item.level == 3}}">娱乐</view>
  </view>
</view>

<view class="show-item">
  <view class="title">事项日期</view>
  <view class="content">
    <text wx:if="{{item}}">{{item.year}}年{{item.month+1}}月{{item.date}}日</text>
  </view>
</view>

<view class="show-item">
  <view class="title">添加日期</view>
  <view class="content">
    <text>{{item.addDate}}</text>
  </view>
</view>